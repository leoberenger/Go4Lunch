<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/workmates_item_img"
            android:layout_width="@dimen/recycler_view_img_width"
            android:layout_height="@dimen/recycler_view_img_height"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/blurred_restaurant"/>

        <TextView
            android:id="@+id/workmates_item_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"/>

    </LinearLayout>

</RelativeLayout>