<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blurred_restaurant"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="@string/app_name"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:contentDescription="Profile Image"
            android:id="@+id/nav_header_profile_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_restaurant_menu_white_24dp"
            />

        <TextView
            android:id="@+id/nav_header_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="JOhnu honj"
            android:layout_toEndOf="@+id/nav_header_profile_img"/>

        <TextView
            android:id="@+id/nav_header_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="azela@gamaze.com"
            android:layout_below="@+id/nav_header_username"
            android:layout_toEndOf="@+id/nav_header_profile_img"/>


    </RelativeLayout>





</LinearLayout>